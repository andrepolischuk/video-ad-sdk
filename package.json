{
  "name": "video-ad-sdk",
  "version": "0.0.0",
  "description": "VAST/VPAID SDK that allows video ads to be played on top of any player",
  "keywords": [
    "vast",
    "vpaid",
    "ads",
    "video-ads"
  ],
  "main": "dist/",
  "module": "dist/",
  "author": "MailOnline <fe@mailonline.co.uk>",
  "bugs": {
    "url": "https://github.com/rambler-digital-solutions/video-ad-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rambler-digital-solutions/video-ad-sdk.git"
  },
  "homepage": "https://github.com/rambler-digital-solutions/video-ad-sdk#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --mode development",
    "demo": "NODE_ENV=production webpack --mode=production",
    "build": "NODE_ENV=production rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint '**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,ts}' && eslint '**/*.{js,ts}' --fix",
    "typecheck": "tsc --noEmit",
    "sizecheck": "tsc && size-limit",
    "docs": "typedoc",
    "release": "semantic-release",
    "prepare": "[ -n \"$CI\" ] && exit 0 || husky install"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "sane-domparser-error": "^0.2.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@rambler-tech/eslint-config": "^0.1.1",
    "@rambler-tech/prettier-config": "^0.1.0",
    "@rambler-tech/ts-config": "^0.0.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^29.5.5",
    "@types/lodash.debounce": "^4.0.7",
    "@types/mockdate": "^2",
    "@types/node": "^20.8.2",
    "braintree-jsdoc-template": "^3.3.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^0.4.5",
    "mockdate": "^2.0.2",
    "mol-commitlint-config": "^1.1.0",
    "mol-conventional-changelog": "^1.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^2.6.2",
    "rollup": "^2.44.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^15.12.1",
    "terser-webpack-plugin": "^1.1.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "typedoc": "^0.20.36",
    "typescript": "^5.2.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "whatwg-fetch": "^3.6.19"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/mol-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "./node_modules/mol-commitlint-config"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
