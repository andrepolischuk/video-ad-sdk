{
  "extends": "@rambler-tech/ts-config/base",
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src", "demo"],
  "exclude": ["node_modules", "dist"]
}
